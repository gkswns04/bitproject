<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="wordstudy.dao.MemberDao">
  <sql id="select01">
    select MNO, NIC, EMAIL, PHOT, PW
    from MEMBERS
  </sql>

  <resultMap type="Member" id="MemberMap">
    <id     column="MNO"    property="no"/>
    <result column="NIC"  property="nick"/>
    <result column="EMAIL"  property="email"/>
    <result column="PW"    property="password"/>
  </resultMap>
  
  <insert id="insert" parameterType="Member">
    insert into MEMBERS(NIC,EMAIL,PW)
    values(#{nick},#{email},#{password})
  </insert>
  
  <update id="update" parameterType="Member">
    update MEMBERS 
       set NIC	=#{nick}
     where EMAIL 	= #{email}
       
    <!-- MNO=#{no}  -->
  </update>

 <update id="pwdChange" parameterType="Member">
    update MEMBERS 
       set PW	    =#{password}
     where EMAIL 	= #{email}
  </update>


  
  <delete id="delete" parameterType="int">
    delete from MEMBERS
    where MNO=#{no}
  </delete>

  <select id="selectList" resultMap="MemberMap">
    <include refid="select01"/>
    order by NIC asc
    limit #{startIndex}, #{length}
  </select>
  
  <select id="selectOne" parameterType="map" resultMap="MemberMap">
    <include refid="select01"/>
      where 
    <if test="no != null">
      MNO=#{no}
    </if>
    <if test="email != null">
      EMAIL=#{email}
    </if>
    <if test="nick != null">
      NIC=#{nick}
    </if>
  </select>
  
  <select id="isMember" parameterType="map" resultType="int">
    select count(*) 
    from MEMBERS
    where EMAIL=#{email} and PW=#{password}
  </select>
  
  <select id="countAll" resultType="int">
    select count(*) 
    from MEMBERS
  </select> 
</mapper>












